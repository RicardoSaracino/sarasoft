{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('bundles/bootstrap-datepicker/css/bootstrap-datepicker3.standalone.min.css') }}"/>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('bundles/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"></script>
	<script>
		$(document).ready(function () {
			$('.js-datepicker').datepicker({
				todayHighlight: true,
				autoclose: true
			});
		});
	</script>
{% endblock %}

{% block title %}Edit Customer Order{% endblock %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
	{% include '::nav.html.twig' %}
	<div class="container">
		<div class="page-header">
			<h1>Edit Customer Order<br>
				<small>{{ customer.firstName }} {{ customer.lastName }}</small><br>
				<small>{{ phone_number_format(customer.phone) }}</small>
			</h1>
		</div>

		<div class="main">
			<div class="col-sm-9">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'autocomplete':'off' }}) }}
				{{ form_widget(form) }}
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<input type="submit" class="btn btn-default" value="Save">
					</div>
				</div>
				{{ form_end(form) }}
			</div>
			<div class="col-sm-3">
				<ul class="nav nav-pills nav-stacked">
					<li>
						<a href="{{ path('listCustomerOrdersByCustomer', { 'customer_id': customer.id }) }}">Show Customer Orders</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
{% endblock %}