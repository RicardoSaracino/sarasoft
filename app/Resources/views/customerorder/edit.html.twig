{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css') }}"/>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('assets/vendor/moment/min/moment.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js') }}"></script>
	<script>
		// http://eonasdan.github.io/bootstrap-datetimepicker/Options/

		$(document).ready(function () {
			$('.js-datepicker').datetimepicker({
				format: "MM/DD/YYYY"
			});

			$('.js-datetimepicker').datetimepicker({

				format: "MM/DD/YYYY hh:mm A",

				showClose: true,

				stepping: 5
			});
		});
	</script>
{% endblock %}


{% block title %}Edit Customer Order{% endblock %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
	{% include '::nav.html.twig' %}
	<div class="container">
		<div class="page-header">
			<h1>Edit Customer Order<br>
				<small>{{ customer.firstName }} {{ customer.lastName }}</small>
				<br>
				<small>{{ phone_number_format(customer.phone) }}</small>
			</h1>
		</div>

		<div class="main">
			<div class="col-sm-9">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'autocomplete':'off' }}) }}
				{{ form_widget(form) }}
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<input type="submit" class="btn btn-default" value="Save">
					</div>
				</div>
				{{ form_end(form) }}
			</div>
			<div class="col-sm-3">
				<ul class="nav nav-pills nav-stacked">
					<li>
						<a href="{{ path('listCustomerOrders') }}">List All Orders</a>
					</li>
					<li>
						<a href="{{ path('listCustomerOrdersByCustomer', {'customer_id': customer.id}) }}">List Customer Orders</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
{% endblock %}