{% extends 'base.html.twig' %}

{% block title %}New Customer Order{% endblock %}

{% block body %}
	{% form_theme form _self %}
	{% include '::nav.html.twig' %}
	<div class="container">
		<div class="page-header">
			<h1>New Customer Order<br>
				<small>{{ customer.firstName }} {{ customer.lastName }}</small>
				<br>
				<small><a href="{{ phone_number_format(customerOrder.customer.phone,'RFC3966') }}">{{ phone_number_format(customerOrder.customer.phone) }}</a></small>
			</h1>
		</div>
		<div class="main">
			<div class="col-sm-9">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'autocomplete':'off' }}) }}
				{{ form_widget(form) }}
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<input type="submit" class="btn btn-default" value="Save">
					</div>
				</div>
				{{ form_end(form) }}
			</div>
			<div class="col-sm-3">
				<ul class="nav nav-pills nav-stacked">
					<li>
						<a href="{{ path('listCustomerOrders') }}">List All Orders</a>
					</li>
					<li>
						<a href="{{ path('listCustomerOrdersByCustomer', {'customer_id': customer.id}) }}">List Customer Orders</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
{% endblock %}