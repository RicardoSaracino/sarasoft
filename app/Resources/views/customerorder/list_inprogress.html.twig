{% extends 'base.html.twig' %}

{% import 'nav.html.twig' as nav %}

{% block title %}In Progress Orders{% endblock %}

{% block body %}
	{% include '::nav.html.twig' %}
	<div class="container">
		<div class="page-header">
			<h1>In Progress Orders</h1>
		</div>
		<div class="table-responsive">
			<table class="table">
				<thead>
				<tr>
					<th>{{ 'customerOrder.label.customer'|trans }}</th>
					<th>{{ 'customer.label.phone'|trans }}</th>
					<th>{{ 'customerOrder.label.company'|trans }}</th>
					<th>{{ 'customerOrder.label.orderType'|trans }}</th>
					<th>{{ 'customerOrder.label.referral'|trans }}</th>
					<th>{{ 'customerOrder.label.progressStartedAt'|trans }}</th>
					<th>Actions</th>
				</tr>
				</thead>
				<tbody>
				{% for customerOrder in customerOrders %}
					<tr>
						<td>{{ customerOrder.customer.fullName }}</td>
						<td><a href="{{ phone_number_format(customerOrder.customer.phone,'RFC3966') }}">{{ phone_number_format(customerOrder.customer.phone) }}</a></td>
						<td>{{ customerOrder.company.name }}</td>
						<td>{{ customerOrder.orderType.name }}</td>
						<td>{% if customerOrder.referral %}{{ customerOrder.referral.name }}{% endif %}</td>
						<td>{{ customerOrder.progressStartedAt|user_datetime }}</td>
						<td>
							<ul class="nav nav-pills">
								<li>
									<a href="{{ path('show_customer_order', { 'id': customerOrder.id }) }}">show</a>
								</li>
								<li>
									<a href="{{ path('edit_customer_order_inprogress', { 'id': customerOrder.id }) }}">edit</a>
								</li>
							</ul>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}