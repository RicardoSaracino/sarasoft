{% extends 'base.html.twig' %}

{% block title %}Cancelled Orders{% endblock %}

{% block body %}
	{% include '::nav.html.twig' %}
	<div class="container">
		<div class="page-header">
			<h1>Cancelled Orders</h1>
		</div>
		<div class="table-responsive">
			<table class="table">
				<thead>
				<tr>
					<th>Customer</th>
					<th>Phone</th>
					<th>Company</th>
					<th>Referral</th>
					<th>Cancelled</th>
					<th>Actions</th>
				</tr>
				</thead>
				<tbody>
				{% for customerOrder in customerOrders %}
					<tr>
						<td>{{ customerOrder.customer.fullName }}</td>
						<td><a href="{{ phone_number_format(customerOrder.customer.phone,'RFC3966') }}">{{ phone_number_format(customerOrder.customer.phone) }}</a></td>
						<td>{{ customerOrder.company.name }}</td>
						<td>{% if customerOrder.referral %}{{ customerOrder.referral.name }}{% endif %}</td>
						<td>{{ customerOrder.cancelledOn|user_datetime }}</td>
						<td>
							<ul class="nav nav-pills">
								<li>
									<a href="{{ path('show_customer_order', { 'id': customerOrder.id }) }}">show</a>
								</li>
								<li>
									<a href="{{ path('edit_customer_order_cancelled', { 'id': customerOrder.id }) }}">edit</a>
								</li>
							</ul>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}