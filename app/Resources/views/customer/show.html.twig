{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
	{% include '::nav.html.twig' %}
	<div class="container">
		<div class="page-header">
			<h1>Customer</h1>
		</div>
		<div class="col-sm-9">
			<table class="table">
				<tbody>
				<tr>
					<th>First Name</th>
					<td>{{ customer.firstName }}</td>
				</tr>
				<tr>
					<th>Last Name</th>
					<td>{{ customer.lastName }}</td>
				</tr>
				<tr>
					<th>Phone</th>
					<td><a href="{{ phone_number_format(customer.phone,'RFC3966') }}">{{ phone_number_format(customer.phone) }}</a></td>
				</tr>
				<tr>
					<th>Alt Phone</th>
					<td>{% if customer.altPhone %}<a href="{{ phone_number_format(customer.altPhone,'RFC3966') }}">{{ phone_number_format(customer.altPhone) }}</a>{% endif %}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{% if customer.email %}<a href="mailto:customer.email">{{ customer.email }}</a>{% endif %}</td>
				</tr>
				<tr>
					<th>Line 1</th>
					<td>{{ customer.address.line1 }}</td>
				</tr>
				<tr>
					<th>Line 2</th>
					<td>{{ customer.address.line2 }}</td>
				</tr>
				<tr>
					<th>Line 3</th>
					<td>{{ customer.address.line3 }}</td>
				</tr>
				<tr>
					<th>City</th>
					<td>{{ customer.address.city }}</td>
				</tr>
				<tr>
					<th>Zip/Postal Code</th>
					<td>{{ customer.address.zipOrPostalcode }}</td>
				</tr>
				<tr>
					<th>State/Province</th>
					<td>{{ customer.address.stateOrProvince|stateProvince }}</td>
				</tr>
				<tr>
					<th>Country</th>
					<td>{{ customer.address.country|country }}</td>
				</tr>
				<tr>
					<th>Created</th>
					<td>{{ customer.createdAt|user_datetime }}{% if customer.createdBy %} by {{ customer.createdBy.fullName }}{% endif %}</td>
				</tr>
				<tr>
					<th>Updated</th>
					<td>{{ customer.updatedAt|user_datetime }}{% if customer.updatedBy %} by {{ customer.updatedBy.fullName }}{% endif %}</td>
				</tr>
			</table>
		</div>
		<div class="col-sm-3">
			<ul class="nav nav-pills nav-stacked">
				<li>
					<a href="{{ path('customer_index') }}">List Customers</a>
				</li>
				<li>
					<a href="{{ path('customer_edit', { 'id': customer.id }) }}">Edit Customer</a>
				</li>
				<li>
					<a href="{{ path('listCustomerOrdersByCustomer', { 'customer_id': customer.id }) }}">List Customer Orders</a>
				</li>
				<li>
					<a href="{{ path('newCustomerOrderForCustomer', { 'customer_id': customer.id }) }}">New Customer Order</a>
				</li>

			</ul>
		</div>
	</div>

{% endblock %}