{% extends 'base.html.twig' %}

{% block title %}Edit Customer{% endblock %}

{% block body %}
	{% form_theme form _self %}
	{% include '::nav.html.twig' %}
	<div class="container">
		<div class="page-header">
			<h1>Edit Customer</h1>
		</div>
		<div class="row">
			<div class="col-sm-9" role="main">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'autocomplete':'off' }}) }}
				{{ form_widget(form) }}
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<input type="submit" class="btn btn-default" value="Save">
					</div>
				</div>
				{{ form_end(form) }}
			</div>
			<div class="col-sm-3" role="complimentary">
				<ul class="nav nav-pills nav-stacked">
					<li>
						<a href="{{ path('customer_index') }}">List Customers</a>
					</li>
					<li>
						<a href="{{ path('listCustomerOrdersByCustomer', { 'customer_id': customer.id }) }}">List Orders</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
