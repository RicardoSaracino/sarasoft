{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
	{% include '::nav.html.twig' %}

	<div class="container">

		<div class="page-header">
			<h1>Customers</h1>
		</div>

		<div class="table-responsive">
			<table class="table">
				<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Phone</th>
					<th>Alt Phone</th>
					<th>Actions</th>
				</tr>
				</thead>
				<tbody>
				{% for customer in customers %}
					<tr>
						<td>{{ customer.firstName }}</td>
						<td>{{ customer.lastName }}</td>
						<td>{{ phone_number_format(customer.phone) }}</td>
						<td>{{ phone_number_format(customer.altPhone) }}</td>
						<td>
							<ul class="nav nav-pills">
								<li>
									<a href="{{ path('customer_show', { 'id': customer.id }) }}">show</a>
								</li>
								<li>
									<a href="{{ path('customer_edit', { 'id': customer.id }) }}">edit</a>
								</li>
							</ul>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>

		<ul class="nav nav-pills nav-stacked">
			<li>
				<a href="{{ path('customer_new') }}">Create a new customer</a>
			</li>
		</ul>
	</div>
{% endblock %}