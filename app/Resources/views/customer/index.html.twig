{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer list</h1>

    <table>
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Phone</th>
                <th>Altphone</th>
                <th>Email</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.firstName }}</a></td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.altPhone }}</td>
                <td>{{ customer.email }}</td>
                <td>{% if customer.createdAt %}{{ customer.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if customer.updatedAt %}{{ customer.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ customer.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('customer_show', { 'id': customer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('customer_edit', { 'id': customer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
