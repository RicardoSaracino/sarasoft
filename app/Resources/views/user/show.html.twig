{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
	{% include '::nav.html.twig' %}

	<div class="container">

		<div class="page-header">
			<h1>User</h1>
		</div>

		<div class="col-sm-9">
			<table class="table">
				<tbody>
				<tr>
					<th>Username</th>
					<td>{{ user.username }}</td>
				</tr>
				<tr>
					<th>First name</th>
					<td>{{ user.firstName }}</td>
				</tr>
				<tr>
					<th>Last name</th>
					<td>{{ user.lastName }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Language</th>
					<td>{{ user.language|language }}</td>
				</tr>
				<tr>
					<th>Time zone</th>
					<td>{{ user.timeZone }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles|join(', ') }}</td>
				</tr>
				<tr>
					<th>Created</th>
					<td>{{ user.createdAt|user_datetime }}{% if user.createdBy %} by {{ user.createdBy.fullName }}{% endif %}</td>
				</tr>
				<tr>
					<th>Updated</th>
					<td>{{ user.updatedAt|user_datetime }}{% if user.updatedBy %} by {{ user.updatedBy.fullName }}{% endif %}</td>
				</tr>
				</tbody>
			</table>
		</div>
		<div class="col-sm-3">
			<ul class="nav nav-pills nav-stacked">
				<li>
					<a href="{{ path('user_index') }}">List Users</a>
				</li>
				<li>
					<a href="{{ path('user_edit', { 'id': user.id }) }}">Edit User</a>
				</li>
				<li>
					<a href="{{ path('user_new', { 'id': user.id }) }}">New User</a>
				</li>
			</ul>
		</div>
	</div>
{% endblock %}
