{% extends 'page.html.twig' %}

{% import 'nav.html.twig' as nav %}

{% block title %}Change User Password{% endblock %}

{% block header %}
	<h1>Change User Password<br>
<small>{{ user.fullName }}</small></h1>{% endblock %}

{% block main %}
	{{ form_start(change_password_form, {'attr': {'novalidate': 'novalidate', 'autocomplete':'off' }}) }}
	{{ form_widget(change_password_form) }}
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<input type="submit" class="btn btn-default" value="Save">
		</div>
	</div>
	{{ form_end(change_password_form) }}
{% endblock %}

{% block complimentary %}
	{{ nav.start }}
	{% if app.user.adminRole %}
		{{ nav.item('List Users', path('user_index')) }}
	{% endif %}
	{{ nav.end }}
{% endblock %}
