{% extends 'base.html.twig' %}

{% import 'nav.html.twig' as nav %}

{% block title %}Users{% endblock %}

{% block body %}
	{% include '::nav.html.twig' %}

	<div class="container">

		<div class="page-header">
			<h1>Users</h1>
		</div>

		<div class="table-responsive">
			<table class="table">
				<thead>
				<tr>
					<th>Username</th>
					<th>Name</th>
					<th>Created</th>
					<th>Actions</th>
				</tr>
				</thead>
				<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.username }}</td>
						<td>{{ user.fullName }}</td>
						<td>{{ user.createdAt|user_datetime }}</td>
						<td>
							<ul class="nav nav-pills">
								<li>
									<a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
								</li>
								<li>
									<a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
								</li>
							</ul>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>

		<ul class="nav nav-pills nav-stacked">
			<li>
				<a href="{{ path('user_new') }}">New User</a>
			</li>
		</ul>
	</div>
{% endblock %}
